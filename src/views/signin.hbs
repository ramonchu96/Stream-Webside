<!DOCTYPE html>
<html lang="en">


<body id="page-top" class="bg-light">


  <div class="container d-flex align-items-center flex-column" >

          <div class="col-md-4 mx-auto">
            <div class="card-header">
              <img src="img/logoproyect.png" class="mx-auto d-block m-4" width="120" height="120" />
            </div>
            <div class="card-body">
                <form action="/signin" method="POST">
                 
                  <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}">
                  </div>
                   <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                  </div>
                  
                  <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">SignIn</button>
                  </div>
                </form>
            </div>
          </div>

        </div>
       
         
  
 

</body>

</html>

